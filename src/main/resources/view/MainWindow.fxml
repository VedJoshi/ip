<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>

<AnchorPane xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="agave.GUI.MainWindow">
    <children>
        <ScrollPane fx:id="scrollPane" prefHeight="400.0" prefWidth="600.0" AnchorPane.topAnchor="10.0" AnchorPane.leftAnchor="10.0">
            <content>
                <VBox fx:id="dialogContainer" spacing="10.0" />
            </content>
        </ScrollPane>
        <TextField fx:id="userInput" prefHeight="30.0" prefWidth="500.0" AnchorPane.bottomAnchor="10.0" AnchorPane.leftAnchor="10.0"/>
        <Button text="Send" onAction="#handleUserInput" prefWidth="80.0" AnchorPane.bottomAnchor="10.0" AnchorPane.rightAnchor="10.0"/>
    </children>
</AnchorPane>
